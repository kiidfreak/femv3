# Django Backend Environment Variables
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=*

# Database (Railway PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# Email (Brevo/ZeptoMail)
BREVO_API_KEY=your-brevo-api-key
ZEPTO_API_KEY=your-zepto-api-key
ZEPTO_FROM_EMAIL=noreply@faithconnect.biz

# SMS (Ndovubase)
SMS_API_KEY=your-sms-api-key
SMS_FROM_NUMBER=Swiftt_OTP

# AWS S3 Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=faithconnectapp
AWS_S3_REGION_NAME=af-south-1
USE_S3=True

# API URLs
API_V2_URL=https://backend.faithconnect.biz/v2
API_V3_URL=https://backend.faithconnect.biz/v3
FRONTEND_V2_URL=https://faithconnect.biz
FRONTEND_V3_URL=https://v3.faithconnect.biz
